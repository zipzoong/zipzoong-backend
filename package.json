{
    "name": "nestia-template",
    "version": "0.0.0",
    "description": "nestia를 적용한 nestjs 서버",
    "main": "build/main",
    "scripts": {
        "check": "ts-patch check",
        "prepare": "ts-patch install",
        "---------------------------------------------": "",
        "build": "rimraf build && tsc -p ./tsconfig.build.json",
        "build:sdk": "rimraf packages/sdk/lib && npm run nestia && tsc -p ./tsconfig.sdk.json",
        "eslint": "eslint src",
        "eslint:fix": "eslint src --fix",
        "prettier": "prettier . -c",
        "prettier:fix": "prettier . -w",
        "dev": "npm run build && NODE_ENV=development node build/main",
        "----------------------------------------------": "",
        "start": "NODE_ENV=production node build/main",
        "-----------------------------------------------": "",
        "test": "rimraf tbuild && tsc -p ./tsconfig.test.json && NODE_ENV=test node tbuild/test",
        "------------------------------------------------": "",
        "swagger": "NODE_ENV=development nestia swagger",
        "sdk": "rimraf ./src/api/functional && NODE_ENV=development nestia sdk && find ./src/api -type f -exec sed -i '' 's/\\r$//' {} \\;",
        "nestia": "npm run swagger ; npm run sdk",
        "package:publish": "npm run build:api && cd ./packages/api && npm publish",
        "-------------------------------------------------": "",
        "db:sch": "ts-node prisma",
        "db:update": "rimraf db && npm run db:sch && prisma generate && find ./db/runtime -type f -exec sed -i '' 's/\\r$//' {} \\;",
        "db:sync": "npm run db:update && prisma migrate dev",
        "db:init": "prisma migrate reset --force",
        "db:deploy": "prisma migrate deploy"
    },
    "author": "industriously",
    "license": "UNLICENSED",
    "repository": {
        "type": "git",
        "url": "git@github.com-industriously:industriously/nestia-template.git"
    },
    "keywords": [
        "nestjs",
        "nestia"
    ],
    "dependencies": {
        "@fxts/core": "^0.17.0",
        "@nestia/core": "^1.4.3",
        "@nestia/fetcher": "^1.4.0",
        "@nestjs/common": "^10.0.5",
        "@nestjs/core": "^10.0.5",
        "@nestjs/platform-express": "^10.0.5",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.3.1",
        "helmet": "^7.0.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "schemix": "^1.14.1",
        "ts-patch": "^3.0.1",
        "typia": "^4.1.4",
        "winston": "^3.9.0"
    },
    "devDependencies": {
        "@nestia/e2e": "^0.3.6",
        "@nestia/sdk": "^1.4.9",
        "@prisma/client": "^4.16.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.17",
        "@types/node": "^20.4.1",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "@typescript-eslint/parser": "^5.61.0",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nestia": "^4.3.2",
        "prettier": "^3.0.0",
        "prisma": "^4.16.2",
        "rimraf": "^5.0.1",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6",
        "typescript-transform-paths": "^3.4.6"
    },
    "prisma": {
        "schema": "prisma/schema.prisma"
    }
}
